#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

# Lint the code
pnpm lint

# Build the template
pnpm build

# Do not allow unstaged changes (this is so that template is up-to-date before committing)
if ! git diff --quiet; then
  echo "âŒ You still have unstaged changes. Please stage or stash them before committing."
  exit 1
fi
